		<div class="row">
			<div class="col-md-6">
				<h1 class="title white-space-7">
					Discover <span class="normal dark-grey">the</span><br>
					<span class="normal colored">Sunny side</span> of Life<br>
				</h1>
			</div>
			<div class="col-md-6">
				<h4 class="light underline uppercase">Guest Reviews</h4>
				<div class="owl-carousel owl-theme">
					@each(review in reviews)
						<div class="white-space-2">
						<span class="light">{{ review.customer_name}}</span>
						<br>
						@each(number in range(review.rating))
							<span class="flaticon-shape tiny-icon"></span>
						@endeach
						
						<br><br>
						<p>{{ review.name }}</p>
						<p class="light">{{review.description}}</p>
					</div>
					@endeach
				</div>
			</div>
